<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Potions and Avatars</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            padding: 20px;
        }
        h1 {
            margin-top: 20px;
            margin-bottom: 20px;
            color: #343a40;
        }
        table {
            margin-bottom: 30px;
        }
        table img {
            border: 2px solid #ddd;
            border-radius: 4px;
            padding: 5px;
            background: #fff;
        }
        a {
            margin-top: 10px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="text-center">
        <a href="home" class="btn btn-primary">Back to HomePage</a>
    </div>
    <div class="container">
        <h1 class="text-center">Avatars</h1>
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Picture</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% for (let index = 0; index < avatar.length; index++) { %>
                    <tr>
                        <td><%= avatar[index].name %></td>
                        <td><%= avatar[index].cost %></td>
                        <td><%= avatar[index].description %></td>
                        <td><img src="/<%= avatar[index].imageURL %>" width="100px" alt="<%= avatar[index].name %>" /></td>
                        <td>
                            <a href="editAvatar/<%= avatar[index]._id%>"><button class="btn btn-secondary">Edit</button></a>
                            <% if(!(String(avatar[index]._id) === String(userAvatarId))){%>
                                <a href="deleteAvatar/<%= avatar[index]._id%>"><button class="btn btn-danger">Delete</button></a>
                            <% } %>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <div class="text-center">
            <a href="createAvatar" class="btn btn-primary">Create New Avatar</a>
        </div>

        <h1 class="text-center">Potions</h1>
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Duration</th>
                    <th>Picture</th>
                </tr>
            </thead>
            <tbody>
                <% for (let index = 0; index < potion.length; index++) { %>
                    <tr>
                        <td><%= potion[index].name %></td>
                        <td><%= potion[index].cost %></td>
                        <td><%= potion[index].duration %></td>
                        <td><img src="/<%= potion[index].imageURL %>" width="100px" alt="<%= potion[index].name %>" /></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <div class="text-center">
            <a href="createPotion" class="btn btn-primary">Create New Potion</a>
        </div>
    </div>
    <!-- Include Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
